{{> layout/header}}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <h1 class="display-4 mb-4">Medilux 회원 게시판</h1>
        </div>
        <div class="col-md-4 text-right">
            {{#userName}}
                <span class="text-muted">Logged in as: <strong>{{userName}}</strong></span>
                <a href="/logout" class="btn btn-info ml-2">Logout</a>
            {{/userName}}
            {{^userName}}
                <a href="/oauth2/authorization/google" class="btn btn-primary ml-2">Google Login</a>
                <a href="/oauth2/authorization/naver" class="btn btn-secondary ml-2">Naver Login</a>
            {{/userName}}
        </div>
    </div>

    <hr>

    <div class="row">
        <div class="col-md-12">
            <a href="/posts/save" class="btn btn-success mb-3">글 등록</a>

            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">게시글 번호</th>
                        <th scope="col">제목</th>
                        <th scope="col">작성자</th>
                        <th scope="col">최종 수정일</th>
                    </tr>
                </thead>
                <tbody>
                    {{#posts}}
                        <tr>
                            <td>{{id}}</td>
                            <td><a href="/posts/update/{{id}}" class="text-dark">{{title}}</a></td>
                            <td>{{author}}</td>
                            <td>{{modifiedDate}}</td>
                        </tr>
                    {{/posts}}
                </tbody>
            </table>
        </div>
    </div>
</div>

{{> layout/footer}}
